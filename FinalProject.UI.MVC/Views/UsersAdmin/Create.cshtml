@model FinalProject.UI.MVC.Models.RegisterViewModel
@{
    ViewBag.Title = "Create New User";
}

<section id="userpage" class="banner-area relative">
    <div class="overlay overlay-bg"></div>
    <div class="container">
        <div class="row d-flex align-items-center justify-content-between">
            <div class="about-content col-lg-12">
                <h6 class="text-white">Grooming For all pets of all Sizes</h6>
                <h1 class="text-white">@ViewBag.Title</h1>
            </div>
        </div>
    </div>
</section>

@using (Html.BeginForm("Create", "UsersAdmin", FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
{
    @Html.AntiForgeryToken()
    @Html.ValidationSummary("", new { @class = "text-error" })
    <div class="container" style="padding-top:2em; padding-bottom:2em;">
        <div class="row" style="border:solid #00a5b8 2px;background-color:lightgray;width:60%;margin:auto;padding-top:1em;">
            <div class="col-md-4">
                <p>
                    <strong>@Html.LabelFor(m => m.Email, new { @class = "col-md-2 control-label" })</strong>
                    @Html.TextBoxFor(m => m.Email, new { @class = "form-control" })
                </p>
                <p>
                    <strong>@Html.LabelFor(m => m.Password, new { @class = "col-md-2 control-label" })</strong>
                    @Html.PasswordFor(m => m.Password, new { @class = "form-control" })
                </p>
                <p>
                    <strong>@Html.LabelFor(m => m.ConfirmPassword, new { @class = "col-md-2 control-label" })</strong>
                    @Html.PasswordFor(m => m.ConfirmPassword, new { @class = "form-control" })
                </p>
            </div>
            <div class="col-md-8">
                <p>
                    Select User Role
                </p>
                <div class="col-md-10">
                    @foreach (var item in (SelectList)ViewBag.RoleId)
                    {
                        <input type="checkbox" name="SelectedRoles" value="@item.Value" class="checkbox-inline" />
                        @Html.Label(item.Value, new { @class = "control-label" })
                    }
                </div>
                <div class="form-group" style="padding-top:10em;">
                    <div class="col-md-offset-2 col-md-10">
                        <input type="submit" class="btn btn-default" value="Create" style=" color:#00a5b8" />
                    </div>
                </div>

            </div>
        </div>
    </div>

}

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
