@model FinalProject.DATA.EF.Reservation

@{
    ViewBag.Title = "Delete Reservation";
}

<section id="petassetpage" class="banner-area relative">
    <div class="overlay overlay-bg"></div>
    <div class="container">
        <div class="row d-flex align-items-center justify-content-between">
            <div class="about-content col-lg-12">
                <h6 class="text-white">Grooming For all pets of all Sizes</h6>
                <h1 class="text-white">@ViewBag.Title</h1>
            </div>
        </div>
    </div>
</section>

<h3 style="color:#00a5b8;">Are you sure you want to delete this Reservation?</h3>
<div class="container" style="padding-top:2em; padding-bottom:2em;">
    <div class="row" style="border:solid #00a5b8 2px;background-color:lightgray;width:40%;margin:auto;padding-top:1em;">
        <div class="col-md-8">
            <p>
                <strong>@Html.DisplayNameFor(model => model.ReservationDate):</strong>
                @Html.DisplayFor(model => model.ReservationDate)
            </p>
            <p>
                <strong>@Html.DisplayNameFor(model => model.Location.LocationName):</strong>
                @Html.DisplayFor(model => model.Location.LocationName)
            </p>
            <p>
                <strong>@Html.DisplayNameFor(model => model.PetAsset.PetName):</strong>
                @Html.DisplayFor(model => model.PetAsset.PetName)
            </p>
            @using (Html.BeginForm())
            {
                @Html.AntiForgeryToken()

                <div class="form-actions no-color">
                    <input type="submit" value="Delete" class="btn btn-default" style="color:#00a5b8;" /> |
                    <strong style="font-size:medium;">@Html.ActionLink("Back to List", "Index")</strong>
                </div>
            }
        </div>

       
    </div>
</div>
