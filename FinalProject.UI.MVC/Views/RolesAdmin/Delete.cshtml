@model Microsoft.AspNet.Identity.EntityFramework.IdentityRole

@{
    ViewBag.Title = "Delete Role";
}

<section id="rolespage" class="banner-area relative">
    <div class="overlay overlay-bg"></div>
    <div class="container">
        <div class="row d-flex align-items-center justify-content-between">
            <div class="about-content col-lg-12">
                <h6 class="text-white">Grooming For all pets of all Sizes</h6>
                <h1 class="text-white">@ViewBag.Title</h1>
            </div>
        </div>
    </div>
</section>

<h3 style="color:#00a5b8;">Are you sure you want to delete this Role? </h3>
<p style="color:#00a5b8;">Deleting this Role will remove all users from this role. It will not delete the users.</p>
<div  class="container" style="padding-top:2em; padding-bottom:2em;">
    <div class="row" style="border:solid #00a5b8 2px;background-color:lightgray;width:50%;margin:auto;padding-top:1em;">
        <div class="col-md-4">
            <p>
                <strong>@Html.DisplayNameFor(model => model.Name)</strong>
                @Html.DisplayFor(model => model.Name)
            </p>
        </div>

        @using (Html.BeginForm())
        {
            @Html.AntiForgeryToken()

            <div class="form-actions no-color" style="padding-bottom:1em;">
                <input type="submit" value="Delete" class="btn btn-default" style="color:#00a5b8;"/> 
                <strong style="font-size:medium;">@Html.ActionLink("Back to List", "Index")</strong>
            </div>
        }



    </div>
>
</div>
